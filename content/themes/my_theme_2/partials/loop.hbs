{{!-- This is the post loop - each post will be output using this markup --}}


{{#foreach posts}}
  <article class="{{post_class}} article-list clearfix" data-id="{{id}}">
      <section class="article-excerpt">
        <div class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
            <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
        </div>

        <div class="post-excerpt">
            <p>{{excerpt words="10"}} <a class="read-more" href="{{url}}">Read more &raquo;</a></p>
        </div>

        <footer class="post-meta">
            <div class="post-tags">{{tags separator=" "}}</div>
        </footer>
      </section>

      <div class="toggle-read">
          <input type="checkbox" value="None" id="check-read {{id}}" data-id="{{id}}" name="check-read" />
          <label for="check-read {{id}}" data-id="{{id}}"></label>
      </div>

  </article>
{{/foreach}}

